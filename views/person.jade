extends layout

block content
	.wrap
		.container-fluid
			h1 Welcome to My App Test
			#message(style='display:none;')
				if msg
					=msg
				else
					if person
						div
							label First Name: 
							span #{person.firstName} 
						div
							label Last Name: 
							span #{person.lastName}
						if person.parents
							h3 Parents
							table
								thead
									tr
										th Name
								tbody
									each parent in person.parents
										tr
											td #{parent.firstName}
						if person.children
							h3 Children
							table
								thead
									tr
										th Name
										th Gender
										th Grade
								tbody
									each child in person.children
										tr
											td #{child.firstName}
											td #{child.gender}
											td #{child.grade}
					else
						Person not found
block body_end
	script(type='text/javascript' src='/js/index.js')
